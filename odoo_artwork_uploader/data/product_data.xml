<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Product Categories -->
        <record id="product_category_transfers" model="product.category">
            <field name="name">Transfers</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>
        
        <record id="product_category_vinyl" model="product.category">
            <field name="name">Vinyl</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>
        
        <record id="product_category_badges" model="product.category">
            <field name="name">Badges &amp; Embroidery</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>
        
        <!-- Example Artwork Products -->
        <record id="product_full_colour_transfer_a3" model="product.template">
            <field name="name">Full Colour Transfer A3</field>
            <field name="categ_id" ref="product_category_transfers"/>
            <field name="type">product</field>
            <field name="sale_ok">1</field>
            <field name="purchase_ok">0</field>
            <field name="list_price">20.00</field>
            <field name="standard_price">10.00</field>
            <field name="is_artwork_product">1</field>
            <field name="artwork_template_type">full_colour</field>
            <field name="min_quantity">10</field>
            <field name="max_upload_size_mb">200</field>
            <field name="description">High-quality full colour transfers on A3 template. Perfect for detailed designs with multiple colors.</field>
            <field name="description_sale">Professional full colour transfers with CMYK color preservation. Minimum quantity: 10 pieces.</field>
        </record>
        
        <record id="product_full_colour_transfer_a4" model="product.template">
            <field name="name">Full Colour Transfer A4</field>
            <field name="categ_id" ref="product_category_transfers"/>
            <field name="type">product</field>
            <field name="sale_ok">1</field>
            <field name="purchase_ok">0</field>
            <field name="list_price">15.00</field>
            <field name="standard_price">7.50</field>
            <field name="is_artwork_product">1</field>
            <field name="artwork_template_type">full_colour</field>
            <field name="min_quantity">10</field>
            <field name="max_upload_size_mb">200</field>
            <field name="description">High-quality full colour transfers on A4 template. Perfect for detailed designs with multiple colors.</field>
            <field name="description_sale">Professional full colour transfers with CMYK color preservation. Minimum quantity: 10 pieces.</field>
        </record>
        
        <record id="product_dtf_transfer_a3" model="product.template">
            <field name="name">DTF Transfer A3</field>
            <field name="categ_id" ref="product_category_transfers"/>
            <field name="type">product</field>
            <field name="sale_ok">1</field>
            <field name="purchase_ok">0</field>
            <field name="list_price">25.00</field>
            <field name="standard_price">12.50</field>
            <field name="is_artwork_product">1</field>
            <field name="artwork_template_type">dtf</field>
            <field name="min_quantity">10</field>
            <field name="max_upload_size_mb">200</field>
            <field name="description">Direct-to-Film transfers with vibrant colors and excellent durability.</field>
            <field name="description_sale">Premium DTF transfers with superior wash resistance. Minimum quantity: 10 pieces.</field>
        </record>
        
        <record id="product_vinyl_transfer_a3" model="product.template">
            <field name="name">Vinyl Transfer A3</field>
            <field name="categ_id" ref="product_category_vinyl"/>
            <field name="type">product</field>
            <field name="sale_ok">1</field>
            <field name="purchase_ok">0</field>
            <field name="list_price">18.00</field>
            <field name="standard_price">9.00</field>
            <field name="is_artwork_product">1</field>
            <field name="artwork_template_type">vinyl</field>
            <field name="min_quantity">10</field>
            <field name="max_upload_size_mb">50</field>
            <field name="description">High-quality vinyl transfers perfect for solid color designs and text.</field>
            <field name="description_sale">Professional vinyl transfers with long-lasting adhesion. Minimum quantity: 10 pieces.</field>
        </record>
        
        <record id="product_embroidery_badges_a3" model="product.template">
            <field name="name">Embroidery Badges A3</field>
            <field name="categ_id" ref="product_category_badges"/>
            <field name="type">product</field>
            <field name="sale_ok">1</field>
            <field name="purchase_ok">0</field>
            <field name="list_price">35.00</field>
            <field name="standard_price">17.50</field>
            <field name="is_artwork_product">1</field>
            <field name="artwork_template_type">badges</field>
            <field name="min_quantity">25</field>
            <field name="max_upload_size_mb">100</field>
            <field name="description">Custom embroidered badges with professional finish and backing options.</field>
            <field name="description_sale">Premium embroidered badges with various backing options. Minimum quantity: 25 pieces.</field>
        </record>
        
        <!-- Default Template Mappings -->
        <record id="mapping_a3_full_colour" model="artwork.template.mapping">
            <field name="template_id">template-A3</field>
            <field name="product_id" ref="product_full_colour_transfer_a3"/>
            <field name="sequence">10</field>
        </record>
        
        <record id="mapping_a4_full_colour" model="artwork.template.mapping">
            <field name="template_id">template-A4</field>
            <field name="product_id" ref="product_full_colour_transfer_a4"/>
            <field name="sequence">20</field>
        </record>
        
        <record id="mapping_dtf_a3" model="artwork.template.mapping">
            <field name="template_id">template-dtf-a3</field>
            <field name="product_id" ref="product_dtf_transfer_a3"/>
            <field name="sequence">30</field>
        </record>
        
        <record id="mapping_vinyl_a3" model="artwork.template.mapping">
            <field name="template_id">template-vinyl-a3</field>
            <field name="product_id" ref="product_vinyl_transfer_a3"/>
            <field name="sequence">40</field>
        </record>
        
        <record id="mapping_embroidery_a3" model="artwork.template.mapping">
            <field name="template_id">template-embroidery-badges-a3</field>
            <field name="product_id" ref="product_embroidery_badges_a3"/>
            <field name="sequence">50</field>
        </record>
        
    </data>
</odoo>